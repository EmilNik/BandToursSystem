<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - SimilarBeads</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SimilarBeads", "Index", "Home", new { area = string.Empty }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("Charts", "Index", "Charts", new { area = string.Empty }, null)</li>
                    <li>@Html.ActionLink("Concerts", "Get", "Concerts", new { area = string.Empty }, null)</li>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href="@Url.Action("Index", "Home", new { area = string.Empty })" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-hashpopup="true" aria-extended="false">
                                Music <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Search", "Index", "Search", new { area = string.Empty }, null)</li>
                                <li>@Html.ActionLink("Radio", "Index", "Radio", new { area = string.Empty }, null)</li>
                                <li>@Html.ActionLink("Your Music", "Index", "Music", new { area = string.Empty }, null)</li>
                            </ul>
                        </li>
                    }

                    @if (this.User.Identity.IsArtist())
                    {
                        <li class="dropdown">
                            <a href="@Url.Action("Index", "Home", new { area = string.Empty })" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-hashpopup="true" aria-extended="false">
                                Artist <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Search", "Index", "Search", new { area = string.Empty }, null)</li>
                                <li>@Html.ActionLink("Radio", "Index", "Radio", new { area = string.Empty }, null)</li>
                                <li>@Html.ActionLink("Your Music", "Index", "Music", new { area = string.Empty }, null)</li>
                            </ul>
                        </li>
                    }

                    @if (this.User.Identity.IsAdmin())
                    {
                        <li class="dropdown">
                            <a href="@Url.Action("Index", "Home", new { area = string.Empty })" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-hashpopup="true" aria-extended="false">
                                Admin <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Search", "Index", "Search", new { area = string.Empty }, null)</li>
                                <li>@Html.ActionLink("Radio", "Index", "Radio", new { area = string.Empty }, null)</li>
                                <li>@Html.ActionLink("Your Music", "Index", "Music", new { area = string.Empty }, null)</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SimilarBeads</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
