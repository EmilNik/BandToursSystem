@model SimilarBeads.Web.ViewModels.Home.HomeViewModel
@{
    ViewBag.Title = "Welcome to SimilarBeads";
}
<h1>@ViewBag.Title</h1>

@Html.Partial("~/Views/Home/_IndexStatistics.cshtml")

<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <h2>Top Artists</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Artist Name</th>
                        <th>Total Songs Plays</th>
                        <th>Number Of Subscribers</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var artist in Model.Artists)
                    {
                        <tr>
                            <td>@artist.Name</td>
                            <td>@artist.SongsPlays</td>
                            <td>@artist.Subscribers</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6 col-sm-12">
            <h2>Top Songs</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Song Name</th>
                        <th>Artist</th>
                        <th>Number Of Subscribers</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var song in Model.Songs)
                    {
                        <tr>
                            <td>@song.Name</td>
                            <td>@song.Artist.Name</td>
                            <td>@song.NumberOfPlays</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>